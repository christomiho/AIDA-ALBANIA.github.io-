{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Ndërhyrjet</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Krasitje</h3>
                        <div class="box-tools pull-right">
                            {#<a class="btn btn-info pull-left" href="{{ path('nderhyrjetkrasitje_new') }}">Shto të re</a>#}
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-responsive" id="dataTables-2">
                            <thead>
                                <tr>
                                    <th class='nr_column_first'>#</th>
                                    <th >Data e krasitjes</th>
                                    <th>Tipi i krasitjes</th>
                                    <th>Kohëzgjatja</th>
                                    <th>Mjetet e përdorura</th>
                                    <th>Produkti i përdorur për dizinfektim</th>
                                    <th>Data e eleminimit të mbetjeve</th>
                                    <th>Mënyra e eleminimit të mbetjeve</th>
                                    <th>Vëzhgime</th>
                                    <th>Modifiko</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% set i=1 %}
                            {% for nderhyrjetKrasitje in nderhyrjetKrasitjes %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{% if nderhyrjetKrasitje.dataKrasitjes %}{{ nderhyrjetKrasitje.dataKrasitjes|date('d-m-Y') }}{% endif %}</td>
                                    <td>{{ nderhyrjetKrasitje.tipiKrasitjes }}</td>
                                    <td>{{ nderhyrjetKrasitje.kohezgjatja }}</td>
                                    <td>{{ nderhyrjetKrasitje.mjetetPerdorura }}</td>
                                    <td>{{ nderhyrjetKrasitje.produktiDizinfektim }}</td>
                                    <td>{% if nderhyrjetKrasitje.dataEliminimiMbetjeve %}{{ nderhyrjetKrasitje.dataEliminimiMbetjeve|date('d-m-Y') }}{% endif %}</td>
                                    <td>{{ nderhyrjetKrasitje.menyraEliminimit }}</td>
                                    <td>{{ nderhyrjetKrasitje.vezhgime }}</td>
                                    <td style="text-align: center">
                                        <a href="{{ path('nderhyrjetkrasitje_edit', { 'id': nderhyrjetKrasitje.id }) }}">
                                            <span class="glyphicon glyphicon-edit"></span>
                                        </a>
                                    </td>
                                </tr>
                                {% set i=i+1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}