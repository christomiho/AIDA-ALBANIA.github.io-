{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Mostra</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Kocinija</h3>
                        <div class="box-tools pull-right">
                            {#<a class="btn btn-info pull-left" href="{{ path('mostrakocinija_new') }}">Shto të re</a>#}
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-responsive" id="dataTables-2">
                            <thead>
                            <tr>
                <th class='nr_column_first'>#</th>
                <th >Data e vëzhgimit</th>
                <th >Adult të gjallë jooparazitë / Lastarë</th>
                <th >Të gjalla (total) / Lastarë</th>
                <th >(%) e vezëve të çelura</th>
                <th >(%) e të rriturve parazitë</th>
                <th >Modifiko</th>
            </tr>
        </thead>
        <tbody>
        {% set i=1 %}
        {% for mostraKocinija in mostraKocinijas %}
            <tr>
                <td>{{ i }}</td>
                <td>{% if mostraKocinija.dataKocinija %}{{ mostraKocinija.dataKocinija|date('d-m-Y') }}{% endif %}</td>
                <td>{{ mostraKocinija.ratioAdulttegjallejoparaziteLastar }}</td>
                <td>{{ mostraKocinija.ratioTegjallatotalLastar }}</td>
                <td>{{ mostraKocinija.perqindjeVezetecelura }}</td>
                <td>{{ mostraKocinija.perqindjeTerriturParazit }}</td>
                <td style="text-align: center">
                            <a href="{{ path('mostrakocinija_edit', { 'id': mostraKocinija.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>

                </td>
            </tr>
            {% set i=i+1 %}
        {% endfor %}
        </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}