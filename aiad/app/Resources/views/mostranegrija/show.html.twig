{% extends 'base.html.twig' %}

{% block body %}
    <h1>MostraNegrija</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mostraNegrija.id }}</td>
            </tr>
            <tr>
                <th>Datanegrija</th>
                <td>{% if mostraNegrija.dataNegrija %}{{ mostraNegrija.dataNegrija|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Perqindjelastarprekur</th>
                <td>{{ mostraNegrija.perqindjeLastarprekur }}</td>
            </tr>
            <tr>
                <th>Perqindjemesatareprekshmerise</th>
                <td>{{ mostraNegrija.perqindjeMesatarePrekshmerise }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mostranegrija_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mostranegrija_edit', { 'id': mostraNegrija.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
