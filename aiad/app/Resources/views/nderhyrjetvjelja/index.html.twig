{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Ndërhyrjet</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Vjelja</h3>
                        <div class="box-tools pull-right">
                            {#<a class="btn btn-info pull-left" href="{{ path('nderhyrjetvjelja_new') }}">Shto të re</a>#}
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-responsive" id="dataTables-2">
                            <thead>
                                <tr>
                                    <th class='nr_column_first'>#</th>
                                    <th>Data e vjeljes</th>
                                    <th>Lloji i ullinjve</th>
                                    <th>Mënyra e vjeljes</th>
                                    <th>Cilësia e vajit</th>
                                    <th>Destinacioni i vjeljes</th>
                                    <th>Prejardhja e frutit</th>
                                    <th>Rendimenti (kg/ha)</th>
                                    <th>Indeksi i pjekjes</th>
                                    <th>Rendimenti yndyror (%)</th>
                                    <th>Aciditeti (%)</th>
                                    <th>Vëzhgime</th>
                                    <th>Modifiko</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% set i=1 %}
                            {% for nderhyrjetVjelja in nderhyrjetVjeljas %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{% if nderhyrjetVjelja.dataVjeljes %}{{ nderhyrjetVjelja.dataVjeljes|date('d-m-Y') }}{% endif %}</td>
                                    <td>{{ nderhyrjetVjelja.llojiUllinjve }}</td>
                                    <td>{{ nderhyrjetVjelja.menyraVjeljes }}</td>
                                    <td>{{ nderhyrjetVjelja.cilesiaVajit }}</td>
                                    <td>{{ nderhyrjetVjelja.vjeljaDestinacioni }}</td>
                                    <td>{{ nderhyrjetVjelja.prejardhjaFrutit }}</td>
                                    <td>{{ nderhyrjetVjelja.rendimenti }}</td>
                                    <td>{{ nderhyrjetVjelja.indeksiPjekjes }}</td>
                                    <td>{{ nderhyrjetVjelja.perqindjeRendimentiYndyror }}</td>
                                    <td>{{ nderhyrjetVjelja.perqindjeAciditeti }}</td>
                                    <td>{{ nderhyrjetVjelja.vezhgime }}</td>
                                    <td style="text-align: center">
                                        <a href="{{ path('nderhyrjetvjelja_edit', { 'id': nderhyrjetVjelja.id }) }}">
                                            <span class="glyphicon glyphicon-edit"></span>
                                        </a>
                                    </td>
                                </tr>
                                {% set i=i+1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}