{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Ndërhyrjet</h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">

                    <!-- TABLE: LATEST ORDERS -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Punimi i tokës</h3>
                            <div class="box-tools pull-right">
                                {#<a class="btn btn-info pull-left" href="{{ path('nderhyrjetpunimitokes_new') }}">Shto të re</a>#}
                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <table class="table table-responsive" id="dataTables-2">
                                <thead>
                                    <tr>
                                        <th class='nr_column_first'>#</th>
                                        <th>Data e punimit të tokës</th>
                                        <th>Mjeti i përdorur</th>
                                        <th>Shpërndarja e punimit</th>
                                        <th>Sip e punuar (ha)</th>
                                        <th>Thellësia maksimale e punimit (cm)</th>
                                        <th>Tipi i punimit</th>
                                        <th>Arsyeja e tipit të punimit</th>
                                        <th>Vëzhgime</th>
                                        <th>Modifiko</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% set i=1 %}
                                {% for nderhyrjetPunimitoke in nderhyrjetPunimitokes %}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>{% if nderhyrjetPunimitoke.dataPunimitTokes %}{{ nderhyrjetPunimitoke.dataPunimitTokes|date('d-m-Y') }}{% endif %}</td>
                                        <td>{{ nderhyrjetPunimitoke.mjetiPerdorur }}</td>
                                        <td>{{ nderhyrjetPunimitoke.shperndarjaPunimit }}</td>
                                        <td>{{ nderhyrjetPunimitoke.sipPunuar }}</td>
                                        <td>{{ nderhyrjetPunimitoke.thellesiaMaxPunimit }}</td>
                                        <td>{{ nderhyrjetPunimitoke.tipiPunimit }}</td>
                                        <td>{{ nderhyrjetPunimitoke.tipiPunimitArsyeja }}</td>
                                        <td>{{ nderhyrjetPunimitoke.vezhgime }}</td>
                                        <td style="text-align: center">
                                            <a href="{{ path('nderhyrjetpunimitokes_edit', { 'id': nderhyrjetPunimitoke.id }) }}">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                         </div><!-- /.table-responsive -->

                     </div><!-- /.box-body -->
                </div><!-- /.box -->
             </div>
         </section><!-- Main content -->
    </div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}