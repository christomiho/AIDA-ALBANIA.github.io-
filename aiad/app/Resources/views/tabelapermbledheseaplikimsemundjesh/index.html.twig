{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Aplikim Sëmundje</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Tabela Përmbledhese</h3>
                        <div class="box-tools pull-right">
                            <a class="btn btn-info pull-left" href="{{ path('newAplikimSemundje') }}">Shto të re</a>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table  style="text-align: center" class="table table-responsive" id="dataTables-2">
                            <thead>
            <tr>
                <th>Id</th>
                <th>Data trajnimit</th>
                <th>Numri Aplikimit</th>
                <th>Sasia Trajtimit</th>
                <th>Siperfaqja (Ha)</th>
                <th>Siperfaqja trajtuar (%)</th>
                <th>Presioni trajtimit</th>
                <th>Shpejtesia trajtimit</th>
                <th>Parcela</th>
                <th>Modifiko</th>
                <th>Detaje</th>
            </tr>
        </thead>
        <tbody>
        {% for tabelaPermbledheseAplikimSemundjesh in tabelaPermbledheseAplikimSemundjeshes %}
            <tr>
                <td><a href="#">{{ tabelaPermbledheseAplikimSemundjesh.id }}</a></td>
                <td>{% if tabelaPermbledheseAplikimSemundjesh.dataTrajnimit %}{{ tabelaPermbledheseAplikimSemundjesh.dataTrajnimit|date('Y-m-d') }}{% endif %}</td>
                <td>{{ tabelaPermbledheseAplikimSemundjesh.numriAplikimit }}</td>
                <td>{{ tabelaPermbledheseAplikimSemundjesh.sasiaTrajtimit }}</td>
                <td>{{ tabelaPermbledheseAplikimSemundjesh.siperfaqjaTrajtuarHektar }}</td>
                <td>{{ tabelaPermbledheseAplikimSemundjesh.siperfaqjaTrajtuarPerqindje }}</td>
                <td>{{ tabelaPermbledheseAplikimSemundjesh.presioniTrajtimit }}</td>
                <td>{{ tabelaPermbledheseAplikimSemundjesh.shpejtesiaTrajtimit }}</td>
                <td>{{ tabelaPermbledheseAplikimSemundjesh.parcela }}</td>
                <td><a href="{{ path('tabelapermbledheseaplikimsemundjesh_edit', { 'id': tabelaPermbledheseAplikimSemundjesh.id }) }}"><i class="glyphicon glyphicon-edit"></i> </a>

                </td>
                <td>
                    <a href="{{ path('aplikimesemundjetedhena_index', { 'id': tabelaPermbledheseAplikimSemundjesh.id }) }}"><i class="glyphicon glyphicon-tasks"></i> </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}