{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Ndërhyrjet</h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">

                    <!-- TABLE: LATEST ORDERS -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Gracka masive</h3>

                            <div class="box-tools pull-right">
                                {#<a class="btn btn-info pull-left" href="{{ path('nderhyrjetgrackamasive_new') }}">Shto të re</a>#}
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table class="table table-responsive" id="dataTables-2">
                                <thead>
                                <tr>
                                    <th class='nr_column_first'>#</th>
                                    <th>Data e ndërhyrjes</th>
                                    <th>Tipi</th>
                                    <th>Objektivi i sëmundjes</th>
                                    <th>Tipi i grackës ose difuzorit</th>
                                    <th>Nr i grackave ose difuzorëve për hektarë</th>
                                    <th>Ferromoni ose lënda aktive</th>
                                    <th>Kompania prodhuese</th>
                                    <th>Kompania shpërndarëse</th>
                                    <th>Vëzhgime</th>
                                    <th>Modifiko</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set i=1 %}
                                {% for nderhyrjetGrackaMasive in nderhyrjetGrackaMasives %}
                                    <tr>
                                        <td>{{ i }}</td>
                                        <td>{% if nderhyrjetGrackaMasive.dataNderhyrjes %}{{ nderhyrjetGrackaMasive.dataNderhyrjes|date('d-m-Y') }}{% endif %}</td>
                                        <td>{{ nderhyrjetGrackaMasive.tipi }}</td>
                                        <td>{{ nderhyrjetGrackaMasive.objektiviSemundjes }}</td>
                                        <td>{{ nderhyrjetGrackaMasive.tipiGrackesDifuzorit }}</td>
                                        <td>{{ nderhyrjetGrackaMasive.numriGrackave }}</td>
                                        <td>{{ nderhyrjetGrackaMasive.ferromoni }}</td>
                                        <td>{{ nderhyrjetGrackaMasive.ferromoniKompaniaProdhuese }}</td>
                                        <td>{{ nderhyrjetGrackaMasive.ferromoniKompaniaShperndarese }}</td>
                                        <td>{{ nderhyrjetGrackaMasive.vezhgime }}</td>
                                        <td>
                                            <a href="{{ path('nderhyrjetgrackamasive_edit', { 'id': nderhyrjetGrackaMasive.id }) }}">
                                                <span class="glyphicon glyphicon-edit"></span>
                                            </a>

                                        </td>
                                    </tr>
                                    {% set i=i+1 %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </section>
        <!-- Main content -->
    </div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function () {
            $('#dataTables-2').DataTable({});
        });
    </script>
{% endblock %}