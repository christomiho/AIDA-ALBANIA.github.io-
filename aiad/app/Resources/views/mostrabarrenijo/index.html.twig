{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Mostra</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Barrenijo</h3>
                        <div class="box-tools pull-right">
                            {#<a class="btn btn-info pull-left" href="{{ path('mostrabarrenijo_new') }}">Shto të re</a>#}
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table style="text-align: center" class="table table-responsive" id="dataTables-2">
                            <thead>
                            <tr>
                                    <th class='nr_column_first'>#</th>
                                    <th style="font-size: 12px; text-align: center">Data e vëzhgimit</th>
                                    <th style="font-size: 12px; text-align: center">Nr i vrimave të hyrjes / Njësi mostre</th>
                                    <th style="font-size: 12px; text-align: center">Nr i vrimave të daljes / Njësi mostre</th>
                                    <th style="font-size: 12px; text-align: center">(%) e lastarëve të prekur</th>
                                    <th style="font-size: 12px; text-align: center">(%) e lastarëve të prekur / Forma të gjalla</th>
                                    <th style="text-align: center; font-size: 12px">Modifiko</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% set i=1 %}
                            {% for mostraBarrenijo in mostraBarrenijos %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{% if mostraBarrenijo.dataBarrenijo %}{{ mostraBarrenijo.dataBarrenijo|date('d-m-Y') }}{% endif %}</td>
                                    <td>{{ mostraBarrenijo.ratioVrimahyrjeNjesimostre }}</td>
                                    <td>{{ mostraBarrenijo.ratioVrimadaljeNjesimostre }}</td>
                                    <td>{{ mostraBarrenijo.perqindjeLastarprekur }}</td>
                                    <td>{{ mostraBarrenijo.ratioLastarprekurFormagjalla }}</td>
                                    <td style="text-align: center">

                                        <a href="{{ path('mostrabarrenijo_edit', { 'id': mostraBarrenijo.id }) }}">
                                            <span class="glyphicon glyphicon-edit"></span>
                                        </a>
                                </td>
                                </tr>
                                {% set i=i+1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}
