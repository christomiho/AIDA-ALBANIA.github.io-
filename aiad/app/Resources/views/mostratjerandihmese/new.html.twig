{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Mostra</h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">

                    <!-- TABLE: LATEST ORDERS -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Të tjera ndihmëse</h3>
                            <div class="box-tools pull-right">

                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body">


                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <input class="btn btn-success pull-right" type="submit" value="Shto" />
                            {{ form_end(form) }}
                            <a class="btn btn-info pull-left" href="{{ path('mostratjerandihmese_index') }}">Kthehu tek lista</a>


                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- Main content -->
    </div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">
        var x = "{{ app.session.get('parcelId') }}";
        $('#mostra_tjera_ndihmese_parcela').closest('.form-group').css('display', 'none');
        $('#mostra_tjera_ndihmese_parcela option[value = '+ x +']').attr('selected','selected');

    </script>


{% endblock %}