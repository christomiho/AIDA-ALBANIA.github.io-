{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Konfigurime</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Distanca</h3>
                        <div class="box-tools pull-right">
                            <a class="btn btn-info pull-left" href="{{ path('settingsdistanca_new') }}">Shto tÃ« re</a>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table style="text-align: center" class="table table-responsive" id="dataTables-2">
                            <thead>
                                <tr>
                                    <th class='nr_column_first'>#</th>
                                    <th>Distanca (m X m)</th>
                                    <th>Modifiko</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% set i=1 %}
                            {% for settingsDistanca in settingsDistancas %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ settingsDistanca.distanca }}</td>
                                    <td style="text-align: center">
                                        <a href="{{ path('settingsdistanca_edit', { 'id': settingsDistanca.id }) }}">
                                            <span class="glyphicon glyphicon-edit"></span>
                                        </a>

                                    </td>
                                </tr>
                                {% set i=i+1 %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
