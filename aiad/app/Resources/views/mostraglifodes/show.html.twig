        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mostraglifodes_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mostraglifodes_edit', { 'id': mostraGlifode.id }) }}">Edit</a>
