{% block body %}
    <h1>MostraGlifodes</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mostraGlifode.id }}</td>
            </tr>
            <tr>
                <th>Dataglifodes</th>
                <td>{% if mostraGlifode.dataGlifodes %}{{ mostraGlifode.dataGlifodes|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Ratioterriturgrackadite</th>
