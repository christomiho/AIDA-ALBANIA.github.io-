{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Parcela Agronomike</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Parcela Agronomike</h3>
                        <div class="box-tools pull-right">
                            <a class="btn btn-info pull-left" href="{{ path('parcelaagronomike_new') }}">Shto të re</a>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-responsive" id="dataTables-2">
        <thead>
            <tr>
                <th class='nr_column_first'>#</th>
                <th>Sipërfaqja</th>
                <th>Pjerrësia</th>
                <th>Orientimi</th>
                <th>Me Ujitje / Pa Ujitje</th>
                <th>Sistemi i ujitjes</th>
                <th>Origjina e ujit</th>
                <th>Cilësia e ujit</th>
                <th>Mbulesa bimore e tokës</th>
                <th>Lloji i mbulesës</th>
                <th>Vëzhgime të tjera</th>
                <th>Modifiko</th>
            </tr>
        </thead>
        <tbody>
        {% set i=1 %}
        {% for parcelaAgronomike in parcelaAgronomikes %}
            <tr>
                <td>{{ i }}</td>
                <td>{{ parcelaAgronomike.siperfaqja }}</td>
                <td>{{ parcelaAgronomike.pjerresia }}</td>
                <td>{{ parcelaAgronomike.orientimi }}</td>
                <td>{{ parcelaAgronomike.ujitje }}</td>
                <td>{{ parcelaAgronomike.sistemiUjitje }}</td>
                <td>{{ parcelaAgronomike.origjinaUjit }}</td>
                <td>{{ parcelaAgronomike.cilesiaUjit }}</td>
                <td>{{ parcelaAgronomike.mbulesaBimoreTokes }}</td>
                <td>{{ parcelaAgronomike.llojiMbuleses }}</td>
                <td>{{ parcelaAgronomike.vezhgimeTjera }}</td>
                <td>
                    <a href="{{ path('parcelaagronomike_edit', { 'id': parcelaAgronomike.id }) }}">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
            </tr>
            {% set i=i+1 %}
        {% endfor %}
        </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}