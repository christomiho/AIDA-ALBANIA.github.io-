{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Ndërhyrjet</h1>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-12">

                <!-- TABLE: LATEST ORDERS -->
                <div class="box box-info">
                    <div class="box-header with-border">
                        <h3 class="box-title">Mbulesa e tokës</h3>
                        <div class="box-tools pull-right">
                            {#<a class="btn btn-info pull-left" href="{{ path('nderhyrjetmbulesatokes_new') }}">Shto të re</a>#}
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-responsive" id="dataTables-2">
        <thead>
            <tr>
                <th class='nr_column_first'>#</th>
                <th>Data e ndërhyrjes</th>
                <th>Specia e mbjellë</th>
                <th>Doza e mbjelljes (kg/ha)</th>
                <th>Sipërfaqja e mbjellë (%)</th>
                <th>Data e eliminimit</th>
                <th>Mënyra e eliminimit</th>
                <th>Vëzhgime</th>
                <th>Modifiko</th>
            </tr>
        </thead>
        <tbody>
        {% set i=1 %}
        {% for nderhyrjetMbulesaToke in nderhyrjetMbulesaTokes %}
            <tr>
                <td>{{ i }}</td>
                <td>{% if nderhyrjetMbulesaToke.dataMbulesaTokes %}{{ nderhyrjetMbulesaToke.dataMbulesaTokes|date('d-m-Y') }}{% endif %}</td>
                <td>{{ nderhyrjetMbulesaToke.speciaMbjelle }}</td>
                <td>{{ nderhyrjetMbulesaToke.dozaMbjelljes }}</td>
                <td>{{ nderhyrjetMbulesaToke.sipMbjelljes }}</td>
                <td>{% if nderhyrjetMbulesaToke.dataEliminimit %}{{ nderhyrjetMbulesaToke.dataEliminimit|date('d-m-Y') }}{% endif %}</td>
                <td>{{ nderhyrjetMbulesaToke.menyraEliminimit }}</td>
                <td>{{ nderhyrjetMbulesaToke.vezhgime }}</td>
                <td style="text-align: center">
                    <a href="{{ path('nderhyrjetmbulesatokes_edit', { 'id': nderhyrjetMbulesaToke.id }) }}">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
            </tr>
            {% set i=i+1 %}
        {% endfor %}
        </tbody>
                        </table>
                    </div><!-- /.table-responsive -->

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </section><!-- Main content -->
</div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}
    <script>
        $(function(){
            $('#dataTables-2').DataTable({
            });
        });
    </script>
{% endblock %}