{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1> Harta</h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">


                    <!-- TABLE: LATEST ORDERS -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Harta</h3>
                            <p class="box-title pull-right" style="font-size: 1.2em"><i class="glyphicon glyphicon-info-sign" style="color: #00a65a"></i> Plotësoni njoftimet që dëshironi, lini bosh ato që nuk kanë nevojë për përditsim.</p>

                            <div class="box-tools pull-right">
                                {#<a class="btn btn-info pull-left" href="{{ path('kultivaret_new') }}">Shto te Re</a>#}
                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body">


                            <form role="form" method="post" action="{{ path ('setAlert') }}">
                                <div class="box-body">

                   {% for row in parcels %}
                       <div class="col-md-12">
                                    <div class="form-group col-md-2" style="display: none">
                                        <label for="name">Id e Parcelës</label>
                                        <input type="text" class="form-control" id="parcel_id" name="parcel_id[]" value="{{ row.getParcel().getId() }}">
                                    </div>

                                   <div class="form-group col-md-4">
                                       <label for="name">Emri i Parcelës</label>
                                       <input type="text" class="form-control" id="parcel_name" name="parcel_name[]" value="{{ row.getParcel() }}" readonly>
                                   </div>

                                   <div class="form-group col-md-2">
                                       <label for="user">Zgjidh ngjyrën</label>
                                       <select class="form-control select2 controls" name = "circleColor[]" id="circleColor" >
                                           <option value="">Zgjidh ngjyrën</option>

                                               <option value="1">E Kuqe</option>
                                               <option value="2">Jeshile</option>
                                               <option value="3">E Verdhe</option>

                                       </select>
                                   </div>

                                   <div class="form-group col-md-2">
                                       <label for="name">Gjatësia e rrezes</label>
                                       <input type="number" class="form-control" id="radius" name="radius[]" >
                                   </div>

                                   <div class="form-group col-md-4">
                                       <label for="name">Njoftimi</label>
                                       <input type="text" class="form-control" id="message" name="message[]" >
                                   </div>
                       </div>
                     {% endfor %}

                                 </div>


                                <div class="box-footer">
                                    <button type="submit" name="submit" class="btn btn-success">Ruaj të dhënat</button>
                                </div>
                            </form>


                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </section><!-- Main content -->
    </div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}

{% endblock %}