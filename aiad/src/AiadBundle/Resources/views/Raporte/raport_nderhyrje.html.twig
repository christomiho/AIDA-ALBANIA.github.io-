{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Gjenerim Raporti Nderhyrje</h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">

                    <!-- TABLE: LATEST ORDERS -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Zgjidh detajet per raportin</h3>
                            <div class="box-tools pull-right">
                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <form role="form" method="post" action="{{ path ('raportNderhyrje') }}">
                                <div class="box-body">




                                    <div class="form-group col-md-4">
                                        <label for="start_date">Data e Fillimit</label>
                                        <input type="date" class="form-control" id="start_date" name="start_date" >
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label for="end_date">Data e Fundit</label>
                                        <input type="date" class="form-control" id="end_date" name="end_date">
                                    </div>

                                    <div class="form-group col-md-4">
                                        <div class="checkbox">
                                            <label>
                                                <input type="radio" name="all_doc" value="1" >
                                                Te Gjitha
                                            </label>
                                        </div>
                                    </div>



                                    <div class="form-group col-md-12">
                                        <div class="form-group col-md-6">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="radio" name="formati_doc" value="1" >
                                                    Format PDF
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="radio" name='formati_doc' value="2">
                                                    Format EXCEL
                                                </label>
                                            </div>
                                        </div>
                                    </div>


                                </div>



                                <!-- /.box-body -->

                                <div class="box-footer">
                                    <button type="submit" name="submit" class="btn btn-success">Gjenero Raport</button>
                                </div>
                            </form>
                        </div><!-- /.box-body -->
                    </div><!-- /.box -->
                </div>
            </div>
        </section><!-- Main content -->
    </div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}


{% endblock %}