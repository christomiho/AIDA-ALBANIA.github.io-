{% extends 'AiadBundle:Default:base.html.twig' %}

{% block content %}
    {% include 'AiadBundle:Default:header.html.twig' %}
    {% include 'AiadBundle:Default:left_sidebar.html.twig' %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1> Parcelat e Përdoruesëve</h1>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-md-12">

                    <!-- TABLE: LATEST ORDERS -->
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">Parcelat e Përdoruesëve</h3>
                            <div class="box-tools pull-right">
                            </div>
                        </div><!-- /.box-header -->
                        <div class="box-body">

                            <form method="post" enctype="multipart/form-data" action="{{ path ('assign_parcels_to_user') }}">
                                <div class="box-body">
                                    <div class="form-group col-md-12">
                                        <label for="user">Zgjidh Përdoruesin</label>
                                        <select class="form-control select2 controls" name = "user" id="user" required="required">
                                            <option value="">Zgjidh Përdoruesin</option>
                                            {% for user in users %}
                                                <option value="{{ user.id }}">{{ user.name }}  {{ user.surname }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="form-group col-md-12">
                                        <label for="parcels">Zgjidhni Parcelat qe do jenë në përgjegjsi te këtij Përdoruesi</label><br>
                                        {% for parcel in parcels %}
                                            <div class="col-md-3">
                                                <input type="checkbox" name="parcelat[]" value="{{ parcel.id }}"> {{  parcel.getEmriParceles() }}  KODI({{ parcel.getKodi() }}) <br>
                                            </div>
                                        {% endfor %}
                                    </div>


                                </div>
                                <!-- /.box-body -->

                                <div class="box-footer">
                                    <button type="submit" name="submit" class="btn btn-success"> Ruaj Veprimin </button>
                                </div>
                            </form>

                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            </div>
        </section>
        <!-- Main content -->
    </div><!-- content wrapper-->
    {% include 'AiadBundle:Default:right_sidebar.html.twig' %}
{% endblock %}
{% block javascripts %}



{% endblock %}